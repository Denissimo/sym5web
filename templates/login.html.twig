    {% block header %}
            {% include('header.html.twig') %}
    {% endblock %}

    <div class="page page-login">


                
                <div class="card card-login">
                    <div class="card-header">
                        <img src="assets/images/abrlogologin.svg" alt="" class="card-iamge">
                    </div>
                    <div class="card-body">

                        <form action="/" class="form-login" id="form-login">
                            <div class="form-input">
                                <label class="input-label" for="inputLogin">Логин</label>
                                <input type="text" class="form-control" id="inputLogin" name="login">
                            </div>

                            <div class="form-input">
                                <label class="input-label" for="inputLogin">Пароль</label>
                                <input type="password" class="form-control" id="inputPassword" name="password">
                            </div>
                              
                            <div class="form-input">
                                <button  type="submit" class="btn btn-green" id="inputSubmit">Войти</button>
                            </div>

                             <div class="form-input">
                                 <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                 <label class="form-check-label" for="flexCheckDefault">Запомнить меня</label>
                                 <a href="/forgotpassword/" class="registration-link">Забыли пароль?</a>
                            </div>

                        </form>


                    </div>
                    <div class="card-footer">
                        <div class="">У вас нет учетной записи?
                            <a href="/signup/" class="registration-link">Зарегистрируйтесь</a>
                        </div>
                    </div>
                </div>


    </div>


